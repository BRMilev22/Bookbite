<style>
/* Restaurant page specific styles */
.text-truncate-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 3.2em;
}

.restaurant-image {
    height: 200px;
    object-fit: cover;
}

.hover-lift {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
}
</style>

<!-- Restaurant Hero Banner -->
<div class="bg-primary bg-opacity-10 py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold mb-3">Find Your Perfect Dining Experience</h1>
                <p class="lead mb-4">Discover and book tables at the best restaurants in town. Filter by cuisine, location, and availability to find your ideal dining spot.</p>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1544148103-0773bf10d330?q=80&w=3870&auto=format&fit=crop" alt="Restaurant dining" class="img-fluid rounded-4 shadow">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Restaurants grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="restaurantsGrid">
        <% if (restaurants && restaurants.length > 0) { %>
            <% restaurants.forEach((restaurant, index) => { %>
                <div class="col restaurant-item">
                    <div class="card restaurant-card h-100 border-0 shadow-sm hover-lift overflow-hidden">
                        <div class="position-relative">
                            <img src="" class="card-img-top restaurant-image unsplash-image" 
                                data-name="<%= restaurant.name %>" 
                                data-size="600x400" 
                                data-keywords="restaurant,food" 
                                data-image-url="<%= restaurant.imageUrl || '' %>"
                                alt="<%= restaurant.name %>">
                            <% if (restaurant.isFeatured) { %>
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-danger p-2">Popular</span>
                                </div>
                            <% } %>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between mb-2">
                                <h5 class="card-title mb-0"><%= restaurant.name %></h5>
                                <% if (restaurant.rating > 0) { %>
                                <div class="text-warning">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if (i <= Math.floor(restaurant.rating)) { %>
                                            <i class="fas fa-star small"></i>
                                        <% } else if (i - restaurant.rating <= 0.5 && i - restaurant.rating > 0) { %>
                                            <i class="fas fa-star-half-alt small"></i>
                                        <% } else { %>
                                            <i class="far fa-star small"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <% } %>
                            </div>
                            <p class="card-text text-muted mb-2"><i class="fas fa-map-marker-alt me-2"></i><%= restaurant.address %></p>
                            <p class="card-text text-truncate-2 mb-3"><%= restaurant.description %></p>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <% if (restaurant.cuisineType) { %>
                                    <span class="badge bg-light text-dark border"><i class="fas fa-utensils me-1"></i> <%= restaurant.cuisineType %></span>
                                <% } %>
                                <% const currentTime = new Date().toTimeString().slice(0, 5); %>
                                <% if (restaurant.openingTime && restaurant.closingTime) { %>
                                    <% if (restaurant.openingTime <= currentTime && currentTime <= restaurant.closingTime) { %>
                                        <span class="badge bg-light text-success border"><i class="far fa-clock me-1"></i> Open Now</span>
                                    <% } else { %>
                                        <span class="badge bg-light text-danger border"><i class="far fa-clock me-1"></i> Closed</span>
                                    <% } %>
                                <% } %>
                                <span class="badge bg-success"><i class="fas fa-table me-1"></i> <%= restaurant.tableCount %> tables</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <% if (restaurant.priceRange) { %>
                                    <% 
                                    let priceClass = '';
                                    if (restaurant.priceRange === 'Budget') {
                                        priceClass = 'price-badge-budget';
                                    } else if (restaurant.priceRange === 'Moderate') {
                                        priceClass = 'price-badge-moderate';
                                    } else if (restaurant.priceRange === 'Expensive') {
                                        priceClass = 'price-badge-expensive';
                                    }
                                    %>
                                    <span class="restaurant-price-badge <%= priceClass %>">
                                        <i class="fas fa-dollar-sign"></i> <%= restaurant.priceRange %>
                                    </span>
                                <% } else { %>
                                    <div></div>
                                <% } %>
                                <a href="/restaurants/<%= restaurant.id %>" class="btn btn-sm btn-primary rounded-pill px-3">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center p-5">
                    <i class="fas fa-search fa-3x mb-3 text-primary"></i>
                    <h4>No restaurants found</h4>
                    <p class="mb-0">Please try a different search term or browse all restaurants.</p>
                </div>
            </div>
        <% } %>
    </div>
</div>
