<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-4">
                        <i class="fas fa-envelope-check me-2"></i>Email Verification
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div id="verification-status">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h4 class="mt-3">Verifying your email...</h4>
                    </div>
                    <div id="verification-message">
                        <p class="text-muted">Please wait while we verify your email address.</p>
                    </div>
                    <div id="verification-link"></div>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="/login">Return to Login</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
