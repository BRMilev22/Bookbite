                                                        <img src="https://images.unsplash.com/photo-1552566626-52f8b828add9?q=80&w=3870&auto=format&fit=crop" 
                                                            class="card-img-top" alt="<%= reservation.restaurant.name %>">
                                                        <div class="reservation-card-tag">
                                                            <span><i class="far fa-calendar me-1"></i> <%= formattedDate %></span>
                                                        </div>
                                                        <div class="reservation-status-badge">
                                                            <span class="badge bg-warning text-dark">
                                                                <i class="fas fa-clock me-1"></i>Pending Confirmation
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <h5 class="card-title mb-3"><%= reservation.restaurant.name %></h5>
                                                        <div class="reservation-details">
                                                            <div class="detail-item">
                                                                <i class="far fa-clock text-primary"></i>
                                                                <span><%= formattedTime %></span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <i class="fas fa-users text-primary"></i>
                                                                <span><%= reservation.guestCount %> <%= reservation.guestCount > 1 ? 'guests' : 'guest' %></span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <i class="fas fa-map-marker-alt text-primary"></i>
                                                                <span class="text-truncate"><%= reservation.restaurant.address %></span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <i class="fas fa-table text-primary"></i>
                                                                <span>Table #<%= reservation.tableId %></span>
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                                            <span class="reservation-status">
                                                                <i class="fas fa-circle text-warning me-1 small"></i>
                                                                Pending Email Confirmation
                                                            </span>
                                                        </div>
                                                        <div class="d-grid gap-2">
                                                            <button class="btn btn-warning btn-sm resend-email-btn" 
                                                                    data-reservation-id="<%= reservation.id %>"
                                                                    data-restaurant-name="<%= reservation.restaurant.name %>">
                                                                <i class="fas fa-envelope me-2"></i> Resend Confirmation Email
                                                            </button>
                                                            <div class="dropdown">
                                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    More Actions
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-end">
                                                                    <li>
                                                                        <a class="dropdown-item" href="/restaurants/<%= reservation.restaurantId %>">
                                                                            <i class="fas fa-store me-2"></i> View Restaurant
                                                                        </a>
                                                                    </li>
                                                                    <li><hr class="dropdown-divider"></li>
                                                                    <li>
                                                                        <form action="/reservations/<%= reservation.id %>/cancel" method="POST">
                                                                            <button type="submit" class="dropdown-item text-danger" 
                                                                                onclick="return confirm('Are you sure you want to cancel this reservation?')">
                                                                                <i class="fas fa-times-circle me-2"></i> Cancel Reservation
                                                                            </button>
                                                                        </form>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="empty-state text-center py-5">
                                    <div class="empty-state-icon mb-4">
                                        <i class="fas fa-check-circle text-muted"></i>
                                    </div>
                                    <h4>No Pending Reservations</h4>
                                    <p class="text-muted mb-4">All your reservations have been confirmed!</p>
                                    <a href="/restaurants" class="btn btn-primary">
                                        <i class="fas fa-utensils me-2"></i> Browse Restaurants
                                    </a>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- Upcoming Reservations -->
                        <div class="tab-pane fade" id="upcoming" role="tabpanel">
                            <% 
                                const upcomingReservations = reservations.filter(r => {
                                    const today = new Date();
                                    today.setHours(0, 0, 0, 0); // Set to start of day
                                    const resDate = new Date(r.date + 'T00:00:00'); // Ensure date is parsed correctly
                                    resDate.setHours(0, 0, 0, 0); // Set to start of day
                                    return r.status === 'confirmed' && resDate >= today;
                                });
                                
                                if (upcomingReservations.length > 0) {
                            %>
                                <div class="reservation-search mb-4">
                                    <div class="input-group">
                                        <span class="input-group-text bg-transparent border-end-0">
                                            <i class="fas fa-search text-muted"></i>
                                        </span>
                                        <input type="text" class="form-control border-start-0 ps-0" id="searchUpcoming" 
                                            placeholder="Search by restaurant name or date...">
