<!-- Featured Restaurants Section with Unsplash Images -->
<section class="py-5 bg-light">
    <div class="container py-4">
        <h2 class="text-center fw-bold mb-5 display-5 position-relative">
            <span class="position-relative z-index-1">Featured Restaurants</span>
            <div class="position-absolute start-50 bottom-0 translate-middle-x bg-primary" style="height: 4px; width: 80px;"></div>
        </h2>
        
        <div class="row g-4">
            <% if (locals.featuredRestaurants && featuredRestaurants.length > 0) { %>
                <% featuredRestaurants.forEach(restaurant => { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="card border-0 shadow overflow-hidden h-100 restaurant-card">
                            <img src="" class="card-img-top restaurant-image unsplash-image" 
                                data-name="<%= restaurant.name %>" 
                                data-size="600x400" 
                                data-keywords="restaurant,food" 
                                data-image-url="<%= restaurant.imageUrl || '' %>"
                                alt="<%= restaurant.name %>">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <% if (restaurant.cuisineType) { %>
                                        <span class="badge bg-<%= restaurant.cuisineType === 'Italian' ? 'danger' : (restaurant.cuisineType === 'Asian' ? 'success' : 'primary') %>"><%= restaurant.cuisineType %> Cuisine</span>
                                    <% } %>
                                    <% if (restaurant.rating > 0) { %>
                                        <span class="text-warning">
                                            <%
                                                // Round the rating to 1 decimal place to handle backend precision issues
                                                const displayRating = Math.round(restaurant.rating * 10) / 10;
                                            %>                            <% for(let i = 1; i <= 5; i++) { %>
                                <% if (i <= Math.floor(displayRating)) { %>
                                    <i class="fas fa-star"></i>
                                <% } else if (i === Math.floor(displayRating) + 1 && displayRating % 1 >= 0.5) { %>
                                    <i class="fas fa-star-half-alt"></i>
                                <% } else { %>
                                    <i class="far fa-star"></i>
                                <% } %>
                            <% } %>
                                        </span>
                                    <% } %>
                                </div>
                                <h3 class="h5 card-title"><%= restaurant.name %></h3>
                                <p class="card-text text-muted"><%= restaurant.description %></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="/restaurants/<%= restaurant.id %>" class="btn btn-outline-primary">View Details</a>
                                    <span class="text-muted"><i class="fas fa-map-marker-alt me-1"></i> <%= restaurant.address.split(',')[0] %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> No featured restaurants found at the moment.
                    </div>
                    <a href="/restaurants" class="btn btn-primary">Browse All Restaurants</a>
                </div>
            <% } %>
        </div>
        
        <div class="text-center mt-5">
            <a href="/restaurants" class="btn btn-primary btn-lg px-5 py-3">View All Restaurants</a>
        </div>
    </div>
</section>

