<!-- Modern Admin Restaurants Management -->
<div class="admin-layout">
    <!-- Modern Admin Sidebar -->
    <nav class="modern-admin-sidebar">
        <div class="sidebar-header">
            <div class="logo-section">
                <i class="fas fa-utensils"></i>
                <div>
                    <h4 class="mb-0">BookBite Admin</h4>
                    <small>Administrative Panel</small>
                </div>
            </div>
        </div>
        
        <ul class="sidebar-nav">
            <li>
                <a href="/admin" class="nav-item">
                    <i class="fas fa-chart-pie"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/admin/users" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Manage Users</span>
                </a>
            </li>
            <li>
                <a href="/admin/restaurants" class="nav-item active">
                    <i class="fas fa-utensils"></i>
                    <span>Manage Restaurants</span>
                </a>
            </li>
            <li class="separator"></li>
            <li>
                <a href="/" class="nav-item">
                    <i class="fas fa-globe"></i>
                    <span>View Website</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Modern Main Content -->
    <main class="modern-admin-content">
        <div class="content-header">
            <div>
                <h1 class="content-title">Manage Restaurants</h1>
                <p class="content-subtitle">Monitor and manage restaurant listings on your platform</p>
            </div>
            <div class="header-actions">
                <a href="/admin/restaurants/add" class="modern-btn primary">
                    <i class="fas fa-plus"></i>
                    Add Restaurant
                </a>
                <button class="modern-btn secondary">
                    <i class="fas fa-download"></i>
                    Export
                </button>
            </div>
        </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a href="/admin/restaurants/add" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Add Restaurant
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-download me-1"></i>
                        Export
                    </button>
                </div>
            </div>
        </div>

        <!-- Restaurants Table -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Restaurant Management</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Cuisine</th>
                                <th>Price Range</th>
                                <th>Location</th>
                                <th>Featured</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (restaurants && restaurants.length > 0) { %>
                                <% restaurants.forEach(restaurant => { %>
                                    <tr>
                                        <td><%= restaurant.id %></td>
                                        <td>
                                            <% if (restaurant.imageUrl) { %>
                                                <img src="<%= restaurant.imageUrl %>" 
                                                     alt="<%= restaurant.name %>" 
                                                     style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                            <% } else { %>
                                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                                     style="width: 50px; height: 50px; border-radius: 8px;">
                                                    <i class="fas fa-utensils text-muted"></i>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <strong><%= restaurant.name %></strong>
                                            <br>
                                            <small class="text-muted"><%= restaurant.phoneNumber %></small>
                                        </td>
                                        <td><%= restaurant.cuisineType %></td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= restaurant.priceRange %>
                                            </span>
                                        </td>
                                        <td>
                                            <small><%= restaurant.address %></small>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= restaurant.isFeatured ? 'success' : 'secondary' %>">
                                                <%= restaurant.isFeatured ? 'Featured' : 'Regular' %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <!-- View Button -->
                                                <a href="/restaurants/<%= restaurant.id %>" 
                                                   class="btn btn-sm btn-info" 
                                                   title="View Restaurant"
                                                   target="_blank">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                
                                                <!-- Edit Button -->
                                                <a href="/admin/restaurants/<%= restaurant.id %>/edit" 
                                                   class="btn btn-sm btn-primary" 
                                                   title="Edit Restaurant">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                
                                                <!-- Toggle Featured Button -->
                                                <button type="button" 
                                                        class="btn btn-sm btn-<%= restaurant.isFeatured ? 'warning' : 'success' %>" 
                                                        onclick="toggleFeatured(<%= restaurant.id %>, <%= !restaurant.isFeatured %>)"
                                                        title="<%= restaurant.isFeatured ? 'Remove from Featured' : 'Make Featured' %>">
                                                    <i class="fas fa-<%= restaurant.isFeatured ? 'star-half-alt' : 'star' %>"></i>
                                                </button>
                                                
                                                <!-- Delete Button -->
                                                <button type="button" 
                                                        class="btn btn-sm btn-danger" 
                                                        onclick="confirmDeleteRestaurant(<%= restaurant.id %>, '<%= restaurant.name %>')"
                                                        title="Delete Restaurant">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No restaurants found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
