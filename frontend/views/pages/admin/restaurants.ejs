<!-- Modern Admin Restaurants Management -->
<div class="admin-layout">
    <!-- Modern Admin Sidebar -->
    <nav class="modern-admin-sidebar">
        <div class="sidebar-header">
            <div class="logo-section">
                <i class="fas fa-utensils"></i>
                <div>
                    <h4 class="mb-0">BookBite Admin</h4>
                    <small>Administrative Panel</small>
                </div>
            </div>
        </div>
        
        <ul class="sidebar-nav">
            <li>
                <a href="/admin" class="nav-item">
                    <i class="fas fa-chart-pie"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/admin/users" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Manage Users</span>
                </a>
            </li>
            <li>
                <a href="/admin/restaurants" class="nav-item active">
                    <i class="fas fa-utensils"></i>
                    <span>Manage Restaurants</span>
                </a>
            </li>
            <li class="separator"></li>
            <li>
                <a href="/" class="nav-item">
                    <i class="fas fa-globe"></i>
                    <span>View Website</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Modern Main Content -->
    <main class="modern-admin-content">
        <div class="content-header">
            <div>
                <h1 class="content-title">Manage Restaurants</h1>
                <p class="content-subtitle">Monitor and manage restaurant listings on your platform</p>
            </div>
            <div class="header-actions">
                <button class="modern-btn primary" onclick="showAddRestaurantModal()">
                    <i class="fas fa-plus"></i>
                    Add Restaurant
                </button>
                <button class="modern-btn secondary" onclick="exportRestaurants()">
                    <i class="fas fa-download"></i>
                    Export
                </button>
            </div>
        </div>

        <!-- Restaurants Table Card -->
        <div class="modern-card">
            <div class="card-header">
                <h3 class="card-title">Restaurant Management</h3>
                <p class="card-subtitle">View and manage all restaurants on your platform</p>
            </div>
            
            <div class="card-content">
                <div class="table-container">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Restaurant</th>
                                <th>Cuisine</th>
                                <th>Price Range</th>
                                <th>Location</th>
                                <th>Featured</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (restaurants && restaurants.length > 0) { %>
                                <% restaurants.forEach(restaurant => { %>
                                    <tr>
                                        <td>
                                            <div class="user-info">
                                                <div class="restaurant-image">
                                                    <% if (restaurant.imageUrl) { %>
                                                        <img src="<%= restaurant.imageUrl %>" alt="<%= restaurant.name %>" 
                                                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                                    <% } else { %>
                                                        <div class="user-avatar"><%= restaurant.name.charAt(0).toUpperCase() %></div>
                                                    <% } %>
                                                </div>
                                                <div>
                                                    <div class="user-name"><%= restaurant.name %></div>
                                                    <div class="user-id"><%= restaurant.phoneNumber %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="table-email"><%= restaurant.cuisineType %></span>
                                        </td>
                                        <td>
                                            <span class="role-badge customer"><%= restaurant.priceRange %></span>
                                        </td>
                                        <td>
                                            <span class="table-date"><%= restaurant.address %></span>
                                        </td>
                                        <td>
                                            <span class="status-badge <%= restaurant.isFeatured ? 'active' : 'inactive' %>">
                                                <i class="fas fa-circle"></i>
                                                <%= restaurant.isFeatured ? 'Featured' : 'Regular' %>
                                            </span>
                                        </td>
                                        <td>                                            <div class="action-buttons">
                                                <!-- View Restaurant Details -->
                                                <button class="action-btn info" 
                                                        onclick="viewRestaurantDetails(<%= restaurant.id %>)" 
                                                        title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                
                                                <!-- View on Site -->
                                                <a href="/restaurants/<%= restaurant.id %>" 
                                                   class="action-btn success" 
                                                   target="_blank"
                                                   title="View on Site">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                                
                                                <!-- Toggle Featured -->
                                                <button type="button" 
                                                        class="action-btn <%= restaurant.isFeatured ? 'warning' : 'secondary' %>" 
                                                        onclick="toggleFeatured(<%= restaurant.id %>, <%= !restaurant.isFeatured %>)"
                                                        title="<%= restaurant.isFeatured ? 'Remove from Featured' : 'Make Featured' %>">
                                                    <i class="fas fa-<%= restaurant.isFeatured ? 'star' : 'star' %>"></i>
                                                </button>
                                                
                                                <!-- Delete Restaurant -->
                                                <button type="button" 
                                                        class="action-btn danger"
                                                        onclick="confirmDeleteRestaurant(<%= restaurant.id %>, '<%= restaurant.name %>')"
                                                        title="Delete Restaurant">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="empty-state">
                                        <div class="empty-content">
                                            <i class="fas fa-utensils"></i>
                                            <h4>No restaurants found</h4>
                                            <p>There are no restaurants added to the system yet.</p>
                                            <a href="/admin/restaurants/add" class="modern-btn primary">
                                                <i class="fas fa-plus"></i>
                                                Add First Restaurant
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Restaurant Details/Add/Edit Modal -->
<div class="modal fade" id="restaurantDetailsModal" tabindex="-1" aria-labelledby="restaurantDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restaurantDetailsModalLabel">
                    <i class="fas fa-utensils me-2"></i>Restaurant Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="restaurantDetailsContent">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editRestaurantBtn" style="display: none;">
                    <i class="fas fa-edit me-1"></i>Edit Restaurant
                </button>
            </div>
        </div>
    </div>
</div>
